{{>header}}
<h4>Sign up</h4>
<div class="row">
  <form id="register" class="col s12">
    <div class="row">
      <div class="input-field col s6">
        <input placeholder="First Name" id="first_name" name="firstname" type="text" class="validate">
      </div>
      <div class="input-field col s6">
        <input placeholder="Last Name" id="last_name" name="lastname" type="text" class="validate">
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input placeholder="Email" id="email" type="email" name="email" class="validate">
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input placeholder="Password" id="password" type="password" name="password" class="validate">
      </div>
    </div>
    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
      <i class="material-icons right">send</i>
    </button>
  </form>
</div>
<script defer src="/js/register.js"></script>
